
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <label for="email">Mã đơn hàng:</label>
    <input type="email" class="form-control" id="txtMaDH">
</div>

<button type="button" class="btn btn-default" id="btnSearch">Search</button>
<div id="ListCartPartial"></div>
<script>

    $(document).ready(function () {
        LoadPartialView();

        $("#btnSearch").click(function () {

            LoadPartialView();
        });
    });


    function LoadPartialView() {
        var Url = '/Order/ListOrderPartial';
        var input_data = {
            "MaDH": $("#txtMaDH").val()
        };

        $.ajax({
            type: 'GET',
            url: Url,
            data: input_data,
            success: function (result) {
                $("#ListCartPartial").html("");
                $("#ListCartPartial").html(result);
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));
            }
        });
    }
</script>


