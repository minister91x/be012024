@model List<DataAccess.ProductNetFrameWork.DTO.Order> 
<table class="table">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>MaDonHang</th>
            <th>CustomerID</th>
            <th>TotalAmount</th>

            <th>CreateDate</th>
            <th>Status</th>
            <th>CustomerName</th>
            <th>CustomerAddress</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.MaDonHang</td>
                    <td>
                        @item.CustomerID
                    </td>
                    <td>
                        @item.TotalAmount
                    </td>


                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.Status</td>


                    <td>
                        @item.CustomerName
                    </td>
                    <td>
                        @item.CustomerAddress
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/Order/OrderDetail?OrderId=@item.OrderID">
                            <i class="fas fa-eye" >
                            </i>Xem
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
