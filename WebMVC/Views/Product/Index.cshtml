
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-group">
    <label for="email">Tên sản phẩm:</label>
    <input type="email" class="form-control" id="txtProductName">
</div>

<button type="button" class="btn btn-default" id="btnSearch">Search</button>

<div id="ListProductPartial"></div>

<script>

    $(document).ready(function () {
        LoadPartialView();

        $("#btnSearch").click(function () {

            LoadPartialView();
        });
    });


    function LoadPartialView() {
        var Url = '/Product/ListProductPartial';
        var input_data = {
            "Name": $("#txtProductName").val()
        };

        $.ajax({
            type: 'GET',
            url: Url,
            data: input_data,
            success: function (result) {
                $("#ListProductPartial").html("");
                $("#ListProductPartial").html(result);
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));
            }
        });
    }
</script>