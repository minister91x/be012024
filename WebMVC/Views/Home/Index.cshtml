@{
    ViewBag.Title = "Home Page";
}
@model List<WebMVC.Models.DataModel>
<div class="jumbotron">
    <h1>ASP.NET</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/chi-tiet-@item.Id">Chi tiết</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>